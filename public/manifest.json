{
  "manifest_version": 3,
  "name": "__MSG_appName__",
  "description": "__MSG_appDesc__",
  "default_locale":"en",
  "version": "0.2",

  "icons": {
    "16": "./assets/gas_16.png",
    "48": "./assets/gas_48.png",
    "128": "./assets/gas_128.png"
  },

  "options_ui": {
    "page": "options.html"
  },

  "action": {
    "default_icon": "./assets/gas_128.png",
    "default_popup": "popup.html"
  },

  "content_scripts": [
      {
          "matches": ["<all_urls>"],
          "js": ["js/vendor.js", "js/content_script.js"]
      }
  ],

  "background": {
    "service_worker": "js/background.js"
  },

  "permissions": [
    "storage",
    "notifications"
  ],

  "host_permissions": [
    "<all_urls>"
  ]
}
