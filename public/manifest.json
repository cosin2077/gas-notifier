{
  "manifest_version": 3,

  "name": "ethereum gas checker",
  "description": "ethereum gas checker,gas tracker, notify you when hitting your setting gas price",
  "version": "0.1",

  "icons": {
    "16": "./assets/gas_16.png",
    "48": "./assets/gas_48.png",
    "128": "./assets/gas_128.png"
  },

  "options_ui": {
    "page": "options.html"
  },

  "action": {
    "default_icon": "./assets/gas_128.png",
    "default_popup": "popup.html"
  },

  "content_scripts": [
      {
          "matches": ["<all_urls>"],
          "js": ["js/vendor.js", "js/content_script.js"]
      }
  ],

  "background": {
    "service_worker": "js/background.js"
  },

  "permissions": [
    "storage",
    "notifications"
  ],

  "host_permissions": [
    "<all_urls>"
  ]
}
