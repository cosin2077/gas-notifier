{
  "manifest_version": 2,
  "name": "ethereum gas checker",
  "description": "when getting low gas, send notification to you!",
  "version": "1.0",
  "icons": {
    "16": "./assets/icon.png",
    "48": "./assets/icon.png",
    "128": "./assets/icon.png"
  },
  "options_ui": {
    "page": "options.html"
  },
  "browser_action": {
    "default_icon": {
      "19": "./assets/icon.png",
      "38": "./assets/icon.png"
    },
    "default_title": "gas-checker",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "js/vendor.js",
        "js/content_script.js"
      ]
    }
  ],
  "background": {
    "scripts": [
      "js/background.js"
    ],
    "persistent": true
  },
  "permissions": [
    "storage",
    "notifications"
  ],
  "host_permissions": [
    "<all_urls>"
  ]
}